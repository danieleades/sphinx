[flake8]
ignore =
    E116,
    E203,
    E241,
    E251,
    E501,
    E704,
    E741,
    W503,
    W504,
    I101,
    SIM102,
    SIM103,
    SIM105,
    SIM114,
    SIM115,
    SIM117,
    SIM223,
    SIM401,
    SIM907,
    SIM910,
exclude =
    .git,
    .tox,
    .venv,
    tests/roots/*,
    build/*,
    doc/_build/*,
    sphinx/search/*,
    doc/usage/extensions/example*.py,
per-file-ignores =
    tests/*: E501
